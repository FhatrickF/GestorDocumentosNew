
@model mvc4.Models.NuevoDocumentViewModel
@{
    ViewBag.Title = "Edición de documentos";
}

<script>
	ready(function () {
		CKEDITOR.replace('Texto', {
			height: 500
		});
	});
</script>

<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
</section>

<section class="content">
    @using (Html.BeginForm("Nuevo", "Document", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-9">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <i class="fa fa-file-text-o"></i>
                        <h3 class="box-title">Nuevo documento</h3>
                    </div>
                    <div class="box-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Titulo)
                            @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Titulo, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Descripción</label>
                            @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", row = "3" })
                            @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
                        </div>
                        <label>Texto del documento</label>
                        <textarea id="Texto" name="Texto" rows="10" cols="80">
							@Model.Texto              
						</textarea>
                        <br />
                        <div class="row">
                            <div class="col-md-8">
                                <a href="~/Document" class="btn btn-default">Cancelar</a>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary btn-block">Guardar documento</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>



